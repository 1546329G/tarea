<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/design_default_color_background"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etCalificacion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Calificacion1"
        android:inputType="numberDecimal"/>
    <EditText
        android:id="@+id/etCalificacion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Calificacion2"
        android:inputType="numberDecimal"/>
    <EditText
        android:id="@+id/etCalificacion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Calificacion3"
        android:inputType="numberDecimal"/>
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/azul"
        android:text="@string/cal_prom"/>
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/azul"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="@string/text_prom"/>

</LinearLayout>